<%= form_with model: [@produto, Comment.new] do |f| %>
  <h5>Adicionar Coment√°rios</h5>
    <div class="row">
      <div class="col-lg-12">
        <%= f.label :commenter %>
        <%= f.text_area :commenter, class: 'form-control' %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label :classificacao %>
        <%= f.select :classificacao, Comment.classificacaos.keys.to_a, {}, class: "form-control" %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label :status %><br/>
        <%= f.select :status, Comment.statuses.keys.to_a, {}, class: "form-control" %>
      </div>
      <br/>
    </div>
  </div>
  <br/>
  <div>
    <%= f.submit "Criar Comentarios", class: "btn btn-dark" %>
  </div>  
<% end %>